<resources>

    <style name="Material" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@color/agora_blue</item>
        <!--<item name="android:windowBackground">@color/white</item>-->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/agora_blue</item>
    </style>

    <style name="Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="android:background">@color/transparent_100_white</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/agora_blue</item>

        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/agora_blue</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="ButtonStyle" parent="Material">
        <item name="android:colorButtonNormal">@color/orange</item>
        <!--<item name="android:colorControlHighlight">@color/accent_ripple</item>-->
        <!--android:backgroundTint="@color/orange"-->
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="RatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/gold</item>
    </style>


</resources>
