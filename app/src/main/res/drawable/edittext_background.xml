<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:app="http://schemas.android.com/apk/res-auto">

    <item app:state_error="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:top="0dp" android:bottom="0dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                    <solid android:color="@color/white"></solid>
                    <corners android:radius="1dp"></corners>
                    <padding android:top="5dp" android:right="5dp" android:left="13dp" android:bottom="5dp"></padding>
                </shape>
            </item>
        </layer-list>
    </item>

    <item app:state_error="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:top="0dp" android:bottom="0dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                    <solid android:color="@color/white"></solid>
                    <corners android:radius="1dp"></corners>
                    <padding android:top="5dp" android:right="5dp" android:left="13dp" android:bottom="5dp"></padding>
                    <stroke android:color="@color/red" android:width="1dp"></stroke>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>