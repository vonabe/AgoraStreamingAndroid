<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color">

    <TextView
            android:id="@+id/txtRu"
            android:textSize="18sp"
            android:text="RUS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_enabled"
            app:layout_constraintTop_toTopOf="@+id/view" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/view" app:layout_constraintBottom_toBottomOf="@+id/view"/>

    <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="70dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"/>

    <TextView
            android:id="@+id/txtEng"
            android:textSize="18sp"
            android:text="ENG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_disabled"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            android:layout_marginStart="8dp"
    />

    <TextView
            android:text="Войти"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="24sp"
            android:textStyle="bold" android:textColor="#DA000000"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.18"/>

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:maxLength="30"
            android:background="@drawable/edittext_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginStart="40dp" android:layout_marginEnd="40dp"
            android:layout_marginTop="16dp"
            android:hint="логин"/>

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:maxLines="1"
            android:singleLine="true"
            android:maxLength="30"
            android:inputType="textPassword"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editLogin"
            android:hint="пароль"/>

    <TextView
            android:id="@+id/txtReceivePassword"
            android:text="@string/restore_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:selectAllOnFocus="false"
            android:linksClickable="false"
            android:autoLink="all"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editPassword"
            app:layout_constraintStart_toStartOf="@+id/editPassword"
            app:layout_constraintEnd_toEndOf="@+id/editPassword"
            app:layout_constraintHorizontal_bias="0.1"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            app:layout_constraintTop_toBottomOf="@+id/txtReceivePassword"
            app:layout_constraintStart_toStartOf="@+id/editPassword"
            app:layout_constraintEnd_toEndOf="@+id/editPassword"
            android:text="Войти"
            app:rippleColor="@color/agora_blue"
            android:textAllCaps="false"
            android:backgroundTint="@color/orange"
            app:cornerRadius="0dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.15"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" android:textStyle="normal"/>

    <TextView
            android:id="@+id/txtRegistration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnLogin"
            app:layout_constraintEnd_toEndOf="@+id/btnLogin" app:layout_constraintStart_toStartOf="@+id/btnLogin"
            app:layout_constraintVertical_bias="0.0" android:layout_marginTop="8dp" android:text="Зарегистрироваться"
            android:gravity="center"/>


</androidx.constraintlayout.widget.ConstraintLayout>